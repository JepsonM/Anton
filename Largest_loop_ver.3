using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;


namespace Largest
{
    public class Program
    {
        public static void Main(string[] args)
        {
            int number = 0;
            int largest = int.MinValue; //refreshing the value of "largest" in order to avoid using the first if.
            int counter = 0;
            // while loop starts
            while (counter < 10) // counter starts from 0 since declaration of the variable 'counter' above.
            {
                Console.Write("Give me the number ");
                number = Convert.ToInt32(Console.ReadLine());
                counter++ 
                if (number > largest)
                {
                    largest = number;
                }
            } // while loop ends
            Console.WriteLine("The max number is {0}", largest); // two options, either using operator or as shown
        }
    }
}
